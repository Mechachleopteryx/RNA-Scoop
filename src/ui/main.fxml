<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.canvas.Canvas?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="ui.FXMLController" style="-fx-background-color: #d4d4d4;">
    <top>
        <VBox>
            <BorderPane.margin>
                <Insets bottom="10"/>
            </BorderPane.margin>
            <MenuBar>
                <Menu text="File"/>
                <Menu text="Edit"/>
                <Menu text="View"/>
                <Menu text="Help"/>
            </MenuBar>
            <HBox alignment="CENTER">
                <ComboBox promptText="Insert path to file here" fx:id="path" prefWidth="1050" editable="true"/>
                <Button text="Load" onAction="#handleLoadButtonAction">
                    <HBox.margin>
                        <Insets left="5"/>
                    </HBox.margin>
                </Button>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox prefHeight="550" prefWidth="605" style="-fx-background-color: #fafafa; -fx-border-color: #adadad;">
            <BorderPane.margin>
                <Insets left="10" right="10"/>
            </BorderPane.margin>
            <HBox>
                <VBox.margin>
                    <Insets left="10" top="10" right="10"/>
                </VBox.margin>
                <Text text="gene: "/>
                <ComboBox fx:id="geneSelector" editable="false" prefWidth="300" promptText="No Gene Selected"/>
            </HBox>
            <ScrollPane fx:id="scrollPane" prefWidth="585" prefHeight="500" style="-fx-border-color: #adadad;">
                <VBox.margin>
                    <Insets left="10" top="10" right="10" bottom="10"/>
                </VBox.margin>
                <Canvas fx:id="canvas" height="1000"/>
            </ScrollPane>
        </VBox>
    </center>
    <right>
        <VBox prefHeight="550" prefWidth="565" style="-fx-background-color: #fafafa; -fx-border-color: #adadad;">
            <BorderPane.margin>
                <Insets right="10"/>
            </BorderPane.margin>
            <Text text="Where tSNE will go"/>
        </VBox>
    </right>
    <bottom>
        <VBox prefHeight="50" style="-fx-background-color: #fafafa; -fx-border-color: #adadad;">
            <BorderPane.margin>
                <Insets top="10"/>
            </BorderPane.margin>
            <Label fx:id="console" text="Welcome to RNA-Scoop!"/>
        </VBox>
    </bottom>
</BorderPane>